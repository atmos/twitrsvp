%h1.fancy Organized
%ul.organized
  - if @organized_events.nil? || @organized_events.empty?
    %li None at this time
  - else
    - @organized_events.each do |event|
      %li
        %a{:href => event_url(event) }= event.short_name
        .meta= event.start_at.strftime('%a %b %e @ %l:%M %P')

